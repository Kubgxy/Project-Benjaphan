FROM node:20-alpine AS base
WORKDIR /app
RUN corepack enable && corepack prepare yarn@4.5.2 --activate

# ðŸ”¹ à¸•à¸´à¸”à¸•à¸±à¹‰à¸‡ dependencies à¸žà¸£à¹‰à¸­à¸¡ build
FROM base AS builder
COPY package.json yarn.lock ./
RUN yarn install --immutable

COPY . .
RUN yarn build

# ðŸ”¹ Runner à¸ªà¸³à¸«à¸£à¸±à¸š Production
FROM node:20-alpine AS runner
WORKDIR /app
ENV NODE_ENV=production

COPY --from=builder /app/dist ./dist
COPY --from=builder /app/package.json ./package.json
COPY --from=builder /app/yarn.lock ./yarn.lock

# ðŸ§  à¸•à¸´à¸”à¸•à¸±à¹‰à¸‡à¹€à¸‰à¸žà¸²à¸° production dependencies à¹€à¸—à¹ˆà¸²à¸™à¸±à¹‰à¸™
RUN corepack enable && corepack prepare yarn@4.5.2 --activate && \
    yarn install --immutable --production

EXPOSE 3000
CMD ["node", "dist/index.js"]
